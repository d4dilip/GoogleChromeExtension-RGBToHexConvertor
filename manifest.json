{
  "manifest_version": 2,
  "name": "RGB to HEX Convertor",
  "short_name": "RGB to HEX",
  
  "description": "This extension converts RGB code to HEX code.",
  "version": "1.0",
  "author": "@d4dilip",
    "background": {
    "persistent": true,
	"page":"rgbtohexconvertor.html"
  },
  "permissions": ["bookmarks"],
  "externally_connectable": {"matches": ["http://d4dilip.wordpress.com/*"]},
  "homepage_url": "http://d4dilip.wordpress.com",
  "offline_enabled": true,
  "content_security_policy":"script-src 'self' 'unsafe-eval'; object-src 'self'" ,
  "browser_action": {
     "default_title": "RGB to HEX Convertor",
	"default_icon": "icon.png",
    "default_popup": "rgbtohexconvertor.html"
  }
}